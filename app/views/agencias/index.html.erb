
<div class="row">
  <div class="class= col-md-6">
    <h3> Listado de Agencias</h3>
  </div>

  <div class="col-md-6 col-sm-6">
    <div class="btn-group pull-right">
    <%=link_to 'Buscar','#',class: 'btn btn-default',data: {target: '#myModal',toggle: 'modal'}  %>
      
       <div class= "btn-group"> 
          <div class="dropdown">
            <button class = "btn btn-default dropdown-toggle" data-toggle="dropdown">
              Descargar
              <span class="caret"> </span>
            </button>
            <ul class="dropdown-menu">
              <li><%=link_to 'PDF', agencias_path(format: :pdf) %></li>
              <li><%=link_to 'CSV', agencias_path(format: :csv) %></li>
            </ul>  
          </div>  
      </div>
    </div>
  </div>
</div>


<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Direccion</th>
      <th>Telefono</th>
      <th>Zona</th>
      <th>Numero</th>
      
    </tr>
  </thead>

  <tbody>
    <% @agencias.each do |agencia| %>
      <tr>
        <td><%= agencia.nombre %></td>
        <td><%= agencia.direccion %></td>
        <td><%= agencia.telefono %></td>
        <td><%= agencia.zona %></td>
        <td><%= agencia.numero %></td>
        <td><%= link_to 'Mostrar', agencia %></td>
        <td><%= link_to 'Mostrar', agencia, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Editar', edit_agencia_path(agencia) %></td>
        <td><%= link_to 'Eliminar', agencia, method: :delete, data: { confirm: 'EstÃ¡ seguro de eliminar el registro ?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Agencia', new_agencia_path, class: 'btn btn-primary'%>

<%= render partial: 'shared/busqueda', locals: { campos_busqueda: 
  [
    :nombre_cont, 
    :direccion_cont,
    :telefono_cont,
    :numero_eq 
  ]

  } %>
